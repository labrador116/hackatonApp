<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@android:color/holo_blue_dark"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descripion_text_view"
        android:text="twwerwrw"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/problem_id_text_view"
        android:layout_below="@id/descripion_text_view"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="test"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zone_id_text_view"
        android:layout_below="@id/descripion_text_view"
        android:layout_toRightOf="@id/problem_id_text_view"
        android:textColor="@android:color/white"
        android:layout_marginLeft="80dp"
        android:textSize="18sp"
        android:text="test"
        />

</RelativeLayout>