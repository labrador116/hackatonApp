<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.hackaton.problemresolverapp">

    <permission android:name="dev.hackaton.problemresolverapp.models.database.providers.ProblemsDataBaseContentProvider.WRITE_DATABASE" android:protectionLevel="normal"/>


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.activities.CreateNewProblemActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.activities.ShowMyProblemsActivity"/>

        <provider
            android:authorities="dev.hackaton.problemresolverapp.models.database.providers.ProblemsDataBaseContentProvider"
            android:name=".models.database.providers.ProblemsDataBaseContentProvider"
            android:exported="false"
            android:writePermission="dev.hackaton.problemresolverapp.models.database.providers.ProblemsDataBaseContentProvider.WRITE_DATABASE">
        </provider>

    </application>

</manifest>